<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <include
            android:id="@+id/include_1"
            layout="@layout/toolbar"></include>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include_1"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/phto_Recy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/ic_touxiang" />

            <TextView

                android:id="@+id/Recy_name"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_above="@+id/Recy_headline"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/phto_Recy"
                android:text="可米酱"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/Recy_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/Recy_name"
                app:srcCompat="@drawable/ic_lv" />

            <ImageView
                android:id="@+id/item_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/Recy_lv"
                app:srcCompat="@drawable/ic_vip" />

            <ImageView
                android:id="@+id/Recy_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/ic_zan" />

            <TextView

                android:id="@+id/Recy_body_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/phto_Recy"
                android:layout_below="@+id/Recy_headline"
                android:layout_marginTop="15dp"
                android:text="文明和谐的次元环境，请和可米酱一起威武" />

            <TextView
                android:id="@+id/Recy_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="【可米酷漫画】社区准则"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/phto_Recy"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>
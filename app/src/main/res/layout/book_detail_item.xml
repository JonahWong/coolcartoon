<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#000000"
        android:layout_margin="6dp"
        android:id="@+id/tv_chapter_id"
        android:text="第52话"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="2017.07.04"
        android:id="@+id/tv_update_time"
        android:layout_alignBottom="@id/tv_likes"
        android:layout_margin="6dp"
        android:layout_below="@+id/tv_chapter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="2017"
        android:id="@+id/tv_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_alignBaseline="@+id/tv_update_time"
        android:layout_alignBottom="@+id/tv_update_time"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_alignParentRight="true"
        android:background="@drawable/continue_read"
        android:text="#68"
        android:layout_margin="6dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/tv_chapter_sum"
        android:layout_width="wrap_content"
        android:layout_height="24dp" />

</RelativeLayout>
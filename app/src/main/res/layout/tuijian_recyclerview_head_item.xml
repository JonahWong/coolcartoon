<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/TuiJian_ViewPager"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
    </android.support.v4.view.ViewPager>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/Tuijian_magic_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/TuiJian_ViewPager"
        />
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/TuiJian_RecyclerView_Head_Item_PaiHang_IMG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/TuiJian_RecyclerView_Head_Item_DongMan_IMG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/TuiJian_RecyclerView_Head_Item_QianDao_IMG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:id="@+id/TuiJian_RecyclerView_Head_Item_DuoBao_IMG"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/TuiJian_RecyclerView_Head_Item_PaiHang_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
           android:text="排行榜单"/>
        <TextView
            android:id="@+id/TuiJian_RecyclerView_Head_Item_DongMan_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="动画专区"
            />
        <TextView
            android:id="@+id/TuiJian_RecyclerView_Head_Item_QianDao_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="每日签到"
            />
        <TextView
            android:id="@+id/TuiJian_RecyclerView_Head_Item_DuoBao_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="酷币夺宝"
            />
    </LinearLayout>
</LinearLayout>